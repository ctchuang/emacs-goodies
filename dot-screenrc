# Reference: http://archerworks.blogspot.com/2010/05/linuxscreenbindkey.html

term screen

startup_message off

# Replace ctrl-A by ctrl-\ (All of the other keys are used by Emacs
escape ^\\

# Default title
shelltitle "-"

# Status line
hardstatus on
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %="
# hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %M %d %0c:%s "

# Refresh the display when exiting programs
altscreen on

# Enable non-blocking mode to better cope with flaky ssh connections.
defnonblock 5

vbell off

defutf8 on

# define a bigger scrollback, default is 100 lines. If it's too large (like
# 100k), it will drag down system performance.
defscrollback 5000

# Ctrl+Left/Right to switch windows
bindkey "^[[1;5D" prev
bindkey "^[[1;5C" next

# Default windows:
screen -t htop 99 htop
screen -t - 0

